<IfModule mod_rewrite.c>
    RewriteEngine On

    # Serve existing files or directories directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Otherwise, send request to Laravel public folder
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
